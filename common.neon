		payEmail:
			server: 'imap.server.com'
			login: 'bank@your-company.com'
			password: 'email-password'
			allowedSenders:
				- 'notification@yourbank.com'
		invoiceEmail:
			name: 'YOUR COMPANY NAME'
			email: 'invoice@your-company.com'
			replyTo: null
			production: false
			copy:
				- backup@app-universe.cz
		alertEmail:
