					bankName: 'Bank name'
					IBAN: 'CZ00 0000 0000 0000 0000 0000'
					SWIFT: 'XXXX CZ PP'
				default:
					bankAccountName: 'Your account name'
					bankAccount: '000-000000'
					bankCode: '0000'
					bankName: 'Bank name'
