parameters:
	logDir: %appDir%./../log/
	menu:
		cmsMainDefault:
			items:
				companies:
					title: company.menu.title
					icon: 'fas fa-building'
					route: ':Admin:Company:default'
					position: 50
					rights:
						- page__company
				invoice:
					title: invoice.menu.title
					icon: fas fa-file-invoice
					route: :Admin:Invoice:default
					position: 5
					rights:
						- page__invoice
					children:
						invoiceReleased:
							title: Vydané
							icon: fas fa-sign-out-alt
							route: :Admin:Invoice:default
							position: 10
							rights:
								- page__invoice__released
						invoiceAccepted:
							title: Přijaté
							icon: fas fa-sign-in-alt
							route: :Admin:Expense:default
							position: 15
							rights:
								- page__invoice__accepted
						bankMovements:
							title: Bankovní pohyby
							icon: fas fa-wallet
							route: :Admin:Invoice:bankMovements
							position: 20
							rights:
								- page__invoice__bank_movements

	invoice:
